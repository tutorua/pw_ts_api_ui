  "bugs": {
    "url": "https://github.com/IhorHoncharov/pw_ts_api_ui/issues"
  },
  "homepage": "https://github.com/IhorHoncharov/pw_ts_api_ui#readme",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3",
    "dotenv": "^17.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
